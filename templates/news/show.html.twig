{% extends 'john-base.html.twig' %}

{% block title %}{{news.title|truncate(80)}} | Taklimakan{% endblock %}
{% block description %}{{news.lead|truncate(160)}}{% endblock %}
{% block keywords %}{{tags|join(', ')|truncate(160)}}{% endblock %}

{% block meta %}
    {% include 'meta-tags.html.twig' %}
{% endblock %}

{% block body %}

{% if show_welcome is defined and show_welcome == true %}
    {% include 'welcome.modal.html.twig' %}
{% endif %}


    {% include 'john-top-menu.html.twig' %}

    {# % include 'news/breadcrumbs.html.twig' % #}

    {# % include 'news/filters.html.twig' % #}

    <div class="container">
        <div class="news-box">

    <div class="tab-content" id="pills-tabContent">
    <!-- Cards -->
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">



    <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="news-header">
                        <h2>{{news.title}}</h2>
                        <ul class="list-inline">
                            <li class="list-inline-item"><a href="\">Taklimakan</a></li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item"><a href="\news">News</a></li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">{{news.title}}</li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>


        <div class="container">
                <div class="news-box" style="margin-bottom: 0px;">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="news-include">
                                <div class="news-img news-img-include">
                                    {% if 'http://' in news.image or 'https://' in news.image %}
                                        <img src="{{news.image}}"> <!-- alt="" class="scale" -->
                                    {% else %}
                                        <img src="/images/news/{{news.image}}"> <!-- alt="" class="scale" -->
                                    {% endif %}
                                    <a class="news-date" href="#">{{ news.date|date("F jS / H:i") }}</a>
                                </div>
                                <div class="news-body news-body-include">

                                    <ul class="list-inline" style="z-index: 200;">
                                        <li class="list-inline-item" style="z-index: 300;">Source: <a href="{{ news.source }}" target="_blank" class="news-source">{{ news.source|source }}</a></li>
                                        {# <li class="list-inline-item"><a href="#">Subscribe</a></li> #}
                                    </ul>

                                    <div class="addthis-buttons">
                                        {% include 'news/buttons.html.twig' %}
                                    </div>


                                    <div class="p-content">
                                        <div class="fr-view">
                                        {{news.text|raw}}
                                        </div>
                                    </div>
                                    <ul class="list-inline news-tags mb-40">
                                        <li class="list-inline-item">Tags:</li>
                                        {% for tag in tags %}
                                            <li class="list-inline-item"><a href="/news?tags={{tag}}">{{tag}}</a></li>
                                        {% endfor %}
                                    </ul>
{# FIXME Hide Shares and Likes while they are not working properly
                                    <ul class="list-inline news-likes news-likes-include">
                                        <li class="list-inline-item"><a href="#"><img src="images/i/like.svg" alt=""> 10 likes</a></li>
                                        <li class="list-inline-item"><a href="#"><img src="images/i/share.svg" alt=""> Share</a></li>
                                    </ul>
#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {% include 'snippets/comments.html.twig'%}

    </div></div>
    </div></div>

{% endblock %}
