<!-- Filters -->

<section class="news-filter">
      <div class="container">
          <div class="row">
              <div class="col-xl-10 col-lg-11 col-md-9 col-sm-11 col-12">
                  <div class="filter-item">
                 <div class="labelDrop">
                     Popularity:
                 </div>

                 <div class="dropDrop">
                     <div class="dropdown show">
                        <a class="btn btn-filter btn-sm btn-block dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            All
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="#">All</a>
                            <a class="dropdown-item" href="#">Most liked</a>
                        </div>
                      </div>
                 </div>


                 <div class="labelDrop">
                     Date:
                 </div>

                 <div class="dropDrop">
                     <div class="dropdown show">
                        <a class="btn btn-filter btn-sm btn-block dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            New
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                          <a class="dropdown-item" href="#">New</a>
                          <a class="dropdown-item" href="#">Older</a>
                        </div>
                      </div>
                 </div>


                 <div class="labelDrop">
                     Tags:
                 </div>

                 <div class="dropDrop">
                     <div class="dropdown show">
                        <a class="btn btn-filter btn-sm btn-block dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          All
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" onclick="var value = document.getElementById('dropdown-item').value;alert('123');">
                            <a class="dropdown-item" href="/">All</a>
                            {% for tag in tags%}
                                <a class="dropdown-item" href="?tags={{tag.tag}}">{{ tag.tag }}</a>
                            {% endfor %}
                        </div>
                      </div>
                 </div>

