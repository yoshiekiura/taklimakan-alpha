
     <div class="col-xl-4 col-lg-4 col-md-6">
         <div class="news-item">
             <div class="news-img">
                {% if 'http://' in el.image or 'https://' in el.image %}
                    <img src="{{el.image}}" alt="">
                {% else %}
                    <img src="/images/news/{{el.image}}" alt="">
                {% endif %}
                {# <img src="/images/news/{{ el.image }}" alt=""> #}
                 <a class="news-date" href="#">{# {{ el.date|date("F jS \\a\\t g:ia") }} #}{{ el.date|date("F jS / H:i") }}</a>
                 <a class="news-source" href="{{ el.source }}" target="_blank">{#Source:#}&#9656;&nbsp;&nbsp;<span>{{ el.source|source }}</span></a>
             </div>
             <div class="news-body">
                 {# <a href="/news/{{el.id}}"><h3>{{ el.title|truncate(50,true) }}</h3></a> #}
                 <a href="/news/{{el.id}}/{{el.title|translit}}"><h3>{{ el.title|truncate(45,true) }}</h3></a>
                 <p>{{ el.lead|truncate(150,true)|raw }}</p>
{# FIXME! Hiding Likes and Comments
                 <ul class="list-inline news-likes">
                     <li class="list-inline-item"><a href="#"><img src="images/i/bubble.svg" alt=""> {{ el.comments_count }} comments</a></li>
                     <li class="list-inline-item"><a href="#"><img src="images/i/like.svg" alt=""> {{el.likes_count}} likes</a></li>
                 </ul>
#}

{# Hide Tags
                 <ul class="list-inline news-tags">
                     <li class="list-inline-item">Tags:</li>
                        {% for tag in el.tags %}
                            <li class="list-inline-item"><a href="?tags={{tag}}">{{tag}}</a></li>
                        {% endfor %}
                 </ul>
#}
             </div>
         </div>
     </div>
