{% extends 'john-base.html.twig' %}

{% block title %}{{course.title}} | Taklimakan{% endblock %}
{% block description %}{{course.lead}}{% endblock %}
{% block keywords %}{{tags|join(', ')}}{% endblock %}

{% block body %}

{% if show_welcome is defined and show_welcome == true %}
    {% include 'welcome.modal.html.twig' %}
{% endif %}

    {% include 'john-top-menu.html.twig' %}

    <div class="container">
        <div class="news-box">

    <div class="tab-content" id="pills-tabContent">
    <!-- Cards -->
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">


    <!-- Breadcrumbs -->
    <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="news-header">
                        <h2>{{course.title}}</h2>
                        <ul class="list-inline">
                            <li class="list-inline-item"><a href="\">Taklimakan</a></li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item"><a href="\courses">Courses & Materials</a></li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">{{course.title}}</li>
                        </ul>
                    </div>
                </div>

            </div>

        </div>


        <!-- Main Container -->

        <div class="container">
            <div class="news-box">
                <div class="row">

                    <!-- Course Body -->
                    <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                        <div class="news-include">
                            {% if course.image is defined and course.image is not empty %}
                            <div class="news-img news-img-include">
                                <img src="/images/courses/{{course.image}}" alt="">
                            </div>
                            {% endif %}

                                    <div class="addthis-buttons">
                                        {% include 'courses/buttons.html.twig' %}
                                    </div>



                            <div class="news-body news-body-include">

                                <div class="p-content">

                                    {% if course.text|length > 42 %}
                                        {{ course.text|raw }}
                                    {% else %}
                                        {{ course.lead|raw }}
                                    {% endif %}

                                </div>
{# FIXME Hide Shares and Likes while they are not working properly
                                <ul class="list-inline news-likes news-likes-include">
                                    <li class="list-inline-item"><a href="#"><img src="images/i/like.svg" alt=""> 10 likes</a></li>
                                    <li class="list-inline-item"><a href="#"><img src="images/i/share.svg" alt=""> Share</a></li>
                                </ul>
#}

                                                {% include 'news/comments.html.twig' %}

                            </div>
                        </div>
                    </div>
                    <!-- End of Course Body -->

                    {% include '/courses/sidebar.html.twig' %}


                </div>
            </div>
        </div>


{% endblock %}
