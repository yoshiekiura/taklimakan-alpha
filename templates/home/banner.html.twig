<header class="bg">
    <span class="bg-circle"></span>
    <div class="container">
        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <nav class="navbar navbar-expand-sm navbar-light bg-transparent">
                    <a class="navbar-brand" href="/"><img src="/images/logo.svg" alt="" class="logo"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                      </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a class="nav-link" href="/news">News</a></li>
                            <li class="nav-item"><a class="nav-link" href="/charts/all">Analytics</a></li>
                            <li class="nav-item"><a class="nav-link" href="/edu">Education</a></li>
                            {% if app.user %}
                                <li class="nav-item"><a class="nav-link" href="{{ path('app_profile_view') }}"><img src="images/i/userpic.svg" alt=""> Profile</a></li>
                                <li class="nav-item"><a class="nav-link" href="{{ path('logout') }}"> Log Out</a></li>
                            {% else %}
                                <li class="nav-item"><a class="nav-link" href="#" data-toggle="modal" data-target="#LogIn"><img src="images/i/userpic.svg" alt=""> Log In</a></li>
                                <li class="nav-item"><a class="nav-link" href="#" data-toggle="modal" data-target="#register">Sign Up</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

        <!-- Форма регистрации -->
        {% set registration_form = getRegistrationForm() %}
        <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="register" aria-hidden="true">
            <div class="modal-dialog" role="document">
                {{ form_start(registration_form, {attr: {action: path('app_security_register'), id: 'registration-form', novalidate: 'novalidate'}}) }}
                <div class="modal-content bg-white">
                    <div class="modal-header">
                        <h5 class="modal-title reg-title">User Registration</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_label(registration_form.first_name) }}
                                    {{ form_widget(registration_form.first_name, {attr: {class: 'form-control', placeholder: registration_form.first_name.vars.label}}) }}
                                    <small class="form-text text-muted valid-error" style="display: none;"></small>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_label(registration_form.last_name) }}
                                    {{ form_widget(registration_form.last_name, {attr: {class: 'form-control', placeholder: registration_form.last_name.vars.label}}) }}
                                    <small class="form-text text-muted valid-error" style="display: none;"></small>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_label(registration_form.email) }}
                                    {{ form_widget(registration_form.email, {attr: {class: 'form-control', placeholder: registration_form.email.vars.label}}) }}
                                    <small class="form-text text-muted valid-error" style="display: none;"></small>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_label(registration_form.erc20_token) }}
                                    {{ form_widget(registration_form.erc20_token, {attr: {class: 'form-control', placeholder: registration_form.erc20_token.vars.label}}) }}
                                    <small class="form-text text-muted valid-error" style="display: none;"></small>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_label(registration_form.password.first) }}
                                    {{ form_widget(registration_form.password.first, {attr: {class: 'form-control', placeholder: registration_form.password.first.vars.label}}) }}
                                    <small class="form-text text-muted" id="passwordHelp">Latin, number and special characters only. Minimum 8 characters, must contain numbers and letters.</small>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_label(registration_form.password.second) }}
                                    {{ form_widget(registration_form.password.second, {attr: {class: 'form-control', placeholder: registration_form.password.second.vars.label}}) }}
                                    <small class="form-text text-muted valid-error" style="display: none;"></small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-buy btn-block" value="Registration" />
                    </div>
                </div>
                {{ form_end(registration_form) }}
            </div>
        </div>
        <!-- /.Форма регистрации -->

        <!-- Верификация Email -->
        <div class="modal fade" id="email-ver" tabindex="-1" role="dialog" aria-labelledby="email-ver" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form id="confirmation-code-form" action="{{ path('app_security_confirmcode') }}" method="post">
                    <div class="modal-content bg-white">
                        <div class="modal-header">
                            <h5 class="modal-title reg-title">Email Verification</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <p>We sent you the code by email. Enter it in the field below and complete the registration</p>
                                </div>
                                <div class="col-lg-6 offset-lg-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="registrationCode" placeholder="342511">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-buy btn-block" value="Complete the registration" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.Верификация Email -->

        <!-- Форм входа -->
        <div class="modal fade" id="LogIn" tabindex="-1" role="dialog" aria-labelledby="LogIn" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form method="post" action="{{ path('login') }}" id="login_form">
                    <div class="modal-content bg-white">
                        <div class="modal-header">
                            <h5 class="modal-title reg-title">User Log In</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="login_email">Email address</label>
                                        <input type="email" class="form-control" id="login_email" aria-describedby="emailHelp" value="" name="_username" placeholder="Enter email">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="login_password">Password</label>
                                        <input type="password" class="form-control" id="login_password" name="_password" placeholder="Password" value="">
                                        <small class="form-text text-muted valid-error" style="display: none;"></small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <a href="#" class="forgot" data-toggle="modal" data-target="#forgotPass" data-dismiss="modal" aria-label="Close">Forgot password?</a>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-buy btn-block" value="Log In" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.Форма входа -->

        <!-- Восстановление пароля. Email -->
        <div class="modal fade" id="forgotPass" tabindex="-1" role="dialog" aria-labelledby="forgotPass" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form id="forgot_password_form" action="{{ path('app_security_forgotpassword') }}" method="post">
                    <div class="modal-content bg-white">
                        <div class="modal-header">
                            <h5 class="modal-title reg-title" id="exampleModalLabel">Forgot password?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Fill in the form below to recover your forgotten password</p>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="forgot_password_email">Enter your email</label>
                                        <input type="email" class="form-control" id="forgot_password_email" value="" placeholder="Enter email">
                                        <small class="form-text text-muted valid-error" style="display: none;"></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-buy btn-block" value="Send code" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.Восстановление пароля. Email -->

        <!-- Восстановление пароля. Верификация Email -->
        <div class="modal fade" id="recover-pass" tabindex="-1" role="dialog" aria-labelledby="recover-pass" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form action="{{ path('app_security_confirmrestorecode') }}" method="post" id="confirmRstoreCodeForm" novalidate>
                    <div class="modal-content bg-white">
                        <div class="modal-header">
                            <h5 class="modal-title reg-title" id="exampleModalLabel">Email Verification</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <p>Please enter 6-digit code we have sent to your e-mail</p>
                                </div>
                                <div class="col-lg-6 offset-lg-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="recover_code" placeholder="342511">
                                        <small id="emailHelp" class="form-text text-muted valid-error" style="display: none"></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-buy btn-block" value="Change password" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.Восстановление пароля. Верификация Email -->

        <!-- Восстановление пароля. Смена пароля -->
        <div class="modal fade" id="change-pass" tabindex="-1" role="dialog" aria-labelledby="change-pass" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form id="changePasswordForm" action="{{ path('app_security_changepassword') }}" method="post">
                    <div class="modal-content bg-white">
                        <div class="modal-header">
                            <h5 class="modal-title reg-title" id="exampleModalLabel">Change password</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="change-pass-1">Enter your new password</label>
                                        <input type="password" class="form-control" id="change-pass-1" placeholder="Password" value="">
                                        <small id="changePasswordHelp" class="form-text text-muted">Latin, number and special characters only. Minimum 8 characters, must contain numbers and letters.</small>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="change-pass-2">Confirm your password</label>
                                        <input type="password" class="form-control" id="change-pass-2" placeholder="Repeat password" value="">
                                        <small id="emailHelp" class="form-text text-muted valid-error" style="display: none"></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-buy btn-block" value="Submit" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.Восстановление пароля. Смена пароля -->

        <div class="slider">
            <div class="row">
                <div class="col-xl-6 col-md-6">
                    <div class="slider-title">
                        <h1>Taklimakan <small>Your compass in the cryptocurrency world</small></h1>
                        <p>Tools for professional investing: Analytics including first Crypto 100 Index, News, Educational materials and much more to come!</p>
                        <a href="/charts/all" class="btn btn-view">View Analytics</a>
                    </div>
                </div>
                <div class="col-xl-6 col-md-6 ">
                    <div class="slider-img text-right">
                        <img src="/images/monitor.png" alt="" class="img-responsive" style="width: 430px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
