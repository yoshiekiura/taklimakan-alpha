<!-- News -->

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="news-header">
                <h2>News</h2>
                <p>We are collecting crypto news from reputable sources and are selecting those that are relevant to the investment community. <br/>Expect much more to come!</p>
            </div>
        </div>
    </div>

    <div class="news-box news-box-index">
        <div class="row">

            {% for el in news %}

            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="news-item">
                    <div class="news-img">
                        <img src="/images/news/{{el.image}}" alt="">
                        <a class="news-date" href="#">{{ el.date|date("F jS \\a\\t g:ia") }}</a>
                        <a class="news-source" href="{{ el.source }}" target="_blank">Source: <span>{{ el.source|source }}</span></a>
                    </div>
                    <div class="news-body">
                        <a href="/news/{{el.id}}/{{el.title|translit}}">
                            <h3>{{ el.title|truncate(50,true) }}</h3>
                        </a>
                        <p>{{ el.lead|truncate(300,true) }}</p>
{# FIXME! Hiding Likes and Comments
                        <ul class="list-inline news-likes">
                            <li class="list-inline-item"><a href="#"><img src="/images/i/bubble.svg" alt=""> {{el.comments_count}} comments</a></li>
                            <li class="list-inline-item"><a href="#"><img src="/images/i/like.svg" alt=""> {{el.likes_count}} likes</a></li>
                        </ul>
#}
                        <ul class="list-inline news-tags">
                            <li class="list-inline-item">Tags:</li>
                            {% for tag in el.tags %}
                                <li class="list-inline-item"><a href="/news?tags={{tag}}">{{tag}}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            {% endfor %}

        </div>

        <div class="row">
            <div class="col-xl-6 offset-xl-3 col-lg-6 offset-lg-3 col-md-6 offset-md-3 col-sm-6 offset-sm-3">
                <a href="/news" class="btn btn-success btn-block btn-load">See all news</a>
            </div>
        </div>
    </div>

    </div>


    <!--/.News Box-->
