{% extends 'john-base.html.twig' %}

{% block body_class %}investor-wrapper{% endblock %}

{% block body %}
    <header class="top-head">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-3 offset-md-3 order-md-2 offset-lg-0 col-sm-4 offset-sm-2 order-sm-2 col-4 order-2">
                    <a href="{{ path('home') }}"><img src="/john/images/logo-color.svg" alt=""></a>
                </div>
                <div class="d-xl-none d-lg-none col-md-2 col-3 col-sm-2 col-1">
                    <a href="#" class="btn-menu">
                        <img src="/john/images/i/bar.svg" alt="">
                    </a>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-4 order-md-4 col-sm-4 order-sm-4 col-5 order-5 text-right hidden-xs">
                    <div class="investor-pic">
                        <h2>{{ app.user.firstName }} {{ app.user.lastName }}</h2>
                        <h5>Investor profile</h5>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="left-side">
        <div class="investor-pic d-xl-none d-lg-none d-md-none d-sm-none">
            <h2>{{ app.user.firstName }} {{ app.user.lastName }}</h2>
            <h5>Investor profile</h5>
        </div>
        <ul class="left-side-menu">
            <li><a href="{% spaceless %}
                    {% if app.request.get('_route') != 'app_profile_view' %}
                        {{ path('app_profile_view') }}
                    {% endif %}
                {% endspaceless %}#headingOne" class="js-profile-link">News</a></li>
            <li><a href="{% spaceless %}
                    {% if app.request.get('_route') != 'app_profile_view' %}
                        {{ path('app_profile_view') }}
                    {% endif %}
                {% endspaceless %}#headingThree" class="js-profile-link">Education</a></li>
            <li><a href="{% spaceless %}
                    {% if app.request.get('_route') != 'app_profile_view' %}
                        {{ path('app_profile_view') }}
                    {% endif %}
                {% endspaceless %}#headingTwo" class="js-profile-link">Analytics</a></li>
            <li><a href="{{ path('app_profile_edit') }}">Manage my profile</a></li>
        </ul>
    </div>
    <section class="main-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    {% block profile_content %}{% endblock %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        const $document = $(document);
        $document.ready(function(){
            $('.btn-menu').click(function(){
                $('.left-side').toggleClass('active');
                $('.main-content').toggleClass('active');
                return false;
            });
            $document.click(function() {
                $('.left-side.active').removeClass('active');
            });
        });
    </script>
{% endblock %}
